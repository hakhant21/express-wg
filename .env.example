# Server Configuration
NODE_ENV=development
PORT=3000
APP_NAME=WireGuard Dashboard
APP_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=asdffdsa
SESSION_MAX_AGE=86400000

# JWT Configuration
JWT_SECRET=asdffdsa
JWT_EXPIRES_IN=7d

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wireguard_dashboard
MONGODB_TEST_URI=mongodb://localhost:27017/wireguard_test

# WireGuard Configuration
WG_CONFIG_PATH=/etc/wireguard
WG_BACKUP_PATH=/var/backups/wireguard
WG_DEFAULT_INTERFACE=wg0

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_FILE_NAME=wireguard-dashboard.log

# Health Check
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=5000

# MTU Testing
MTU_TEST_HOSTS=8.8.8.8,1.1.1.1,google.com
MTU_TEST_TIMEOUT=2000
MTU_TEST_COUNT=3
MTU_TEST_INTERVAL=500
MTU_TEST_MIN=1280
MTU_TEST_MAX=1500
MTU_TEST_STEP=20

# Myanmar ISP MTU Profiles
MPT_MTU=1400
MPT_DNS=203.81.64.2,203.81.64.3
MPT_KEEPALIVE=25

OOREDOO_MTU=1420
OOREDOO_DNS=8.8.8.8,8.8.4.4
OOREDOO_KEEPALIVE=20

MYTEL_MTU=1350
MYTEL_DNS=1.1.1.1,1.0.0.1
MYTEL_KEEPALIVE=30

ATOM_MTU=1380
ATOM_DNS=9.9.9.9,149.112.112.112
ATOM_KEEPALIVE=25

TELENOR_MTU=1400
TELENOR_DNS=8.8.8.8,8.8.4.4
TELENOR_KEEPALIVE=20

# Backup
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=86400
AUTO_BACKUP_RETENTION_DAYS=30

# Dashboard Settings
DASHBOARD_REFRESH_INTERVAL=10000
DASHBOARD_MAX_PEERS_DISPLAY=50
DASHBOARD_MAX_SERVERS_DISPLAY=20

# File Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=.json,.conf,.txt

# Development
DEBUG=false
MOCK_WIREGUARD=false
MOCK_PEERS_COUNT=10
MOCK_SERVERS_COUNT=3
